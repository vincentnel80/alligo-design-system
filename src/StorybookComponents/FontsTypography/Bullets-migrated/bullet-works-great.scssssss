// SB only template display
// mobile
.body-xl-mob {
  color: var(--color-text-primary, #000);
  font-family: var(--font-family-body-xl, "breuercondensed");
  font-size: var(--font-size-body-xl, 20px);
  font-style: normal;
  font-weight: var(--font-weight-body-xl, 400);
  line-height: var(--line-height-body-xl, 26px); /* 130% */
  letter-spacing: var(--letter-spacing-body-xl, 0px);
}

.body-lg-mob {
  color: var(--color-text-primary, #000);
  font-family: var(--font-family-body-lg, "breuercondensed");
  font-size: var(--font-size-body-lg, 18px);
  font-style: normal;
  font-weight: var(--font-weight-body-lg, 400);
  line-height: var(--line-height-body-lg, 26px); /* 144.444% */
  letter-spacing: var(--letter-spacing-body-lg, 0px);
}

.body-md-mob {
  color: var(--color-text-primary, #000);
  font-family: var(--font-family-body-md, "breuercondensed");
  font-size: var(--font-size-body-md, 16px);
  font-style: normal;
  font-weight: var(--font-weight-body-md, 400);
  line-height: var(--line-height-body-md, 22px); /* 137.5% */
  letter-spacing: var(--letter-spacing-body-md, 0.32px);
}

.body-sm-mob {
  color: var(--color-text-primary, #000);
  font-family: var(--Font-global-serif, "breuercondensed");
  font-size: var(--font-size-body-sm, 14px);
  font-style: normal;
  font-weight: var(--font-weight-body-sm, 400);
  line-height: var(--line-height-body-sm, 20px); /* 142.857% */
  letter-spacing: var(--letter-spacing-body-sm, 0.28px);
}

