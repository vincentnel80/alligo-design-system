// CSS for 3 level 

.govuk-list--bullet {
  list-style-type: disc; /* First-level bullets */
  margin-left: 20px; /* Indent the list */
}

.govuk-list--bullet ul {
  list-style-type: circle; /* Second-level bullets */
  margin-left: 20px;
}

.govuk-list--bullet ul ul {
  list-style-type: square; /* Third-level bullets */
  margin-left: 20px;
}

// make lists for ol, ul, etc
// what is happening with the above? - get global fonts

// this is to deactivate ::marker
// global
// storybook styles
ul, li {
  list-style-type: none; /* Removes default bullet or marker */
}

ul::marker, li::marker {
  display: none; /* Hides any markers generated by default */
}

