// Base Bullet List Styles
.bullet-list {
  list-style-type: disc;
  margin-left: 20px;
  color: var(--color-text-primary, #000);
  
  // Shared styles for all variants
  .list-wrapper {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    align-self: stretch;
    svg {
      fill: #595959;
    }
    span {
      font-family: "breuercondensed";
    }
  }
}

// Desktop Large Variant
.bullet-list--desktop-large {
  font-size: 24px;
  line-height: 32px; // Adjusted for large screens
  .list-wrapper span {
    font-size: 24px; // Specific adjustment
  }
}

// Desktop Medium Variant
.bullet-list--desktop-medium {
  font-size: 20px;
  line-height: 28px;
  .list-wrapper span {
    font-size: 20px;
  }
}

// Mobile Large Variant
.bullet-list--mobile-large {
  font-size: 18px;
  line-height: 26px;
  .list-wrapper span {
    font-size: 18px;
  }
}

// Mobile Medium Variant
.bullet-list--mobile-medium {
  font-size: 16px;
  line-height: 22px;
  .list-wrapper span {
    font-size: 16px;
  }
}

