///
/// 
/// // Base Bullet List Styles
/// THESE ARE ALL NEW IE added after first ---- so first is still applicable
.bullet-list {
  list-style-type: none;
  margin-left: 20px;
  color: var(--color-text-primary, #000);
  
  .list-wrapper {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    align-self: stretch;
    svg {
      fill: #595959;
    }
    span {
      font-family: "breuercondensed";
    }
  }

  .list-level-2 {
    margin-left: 20px; // Indentation for level 2
  }

  .list-level-3 {
    margin-left: 20px; // Indentation for level 3
  }
}

// Desktop Large Variant
.bullet-list--desktop-large {
  font-size: 24px;
  line-height: 32px;

  .list-wrapper span {
    font-size: 24px;
  }
}

// Desktop Medium Variant
.bullet-list--desktop-medium {
  font-size: 20px;
  line-height: 28px;

  .list-wrapper span {
    font-size: 20px;
  }
}

// Mobile Large Variant
.bullet-list--mobile-large {
  font-size: 18px;
  line-height: 26px;

  .list-wrapper span {
    font-size: 18px;
  }
}

// Mobile Medium Variant
.bullet-list--mobile-medium {
  font-size: 16px;
  line-height: 22px;

  .list-wrapper span {
    font-size: 16px;
  }
}

// Check Style for Desktop Large
.bullet-list--check-desktop-large {
  .list-wrapper svg {
    fill: green;  // Custom checkmark style
  }
}

// Dot Style for Desktop Large
.bullet-list--dot-desktop-large {
  list-style-type: disc;

  .list-wrapper svg {
    display: none;  // Hide SVG for dot style
  }
}

// Numbered List for Desktop Large
.bullet-list--numbered-desktop-large {
  list-style-type: decimal;

  .list-wrapper svg {
    display: none;  // Hide SVG for numbered list
  }
}

ol {
  list-style-type: decimal; /* Ensures ordered list numbers */
  margin-left: 20px;
}

.list-level-1, .list-level-2, .list-level-3 {
  list-style-type: decimal; /* Ensures numbers for all levels */
  margin-left: 20px; /* Adjusts indentation for nesting */
}
